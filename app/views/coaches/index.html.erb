<h1>Listing Coaches</h1>

<table data-role="table" class="ui-responsive">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Middlename</th>
      <th>Lastname</th>
      <th>Nickname</th>
      <th>Teams</th>
      <th>Active</th>
      <th>Email</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= coach.firstname %></td>
        <td><%= coach.middlename %></td>
        <td><%= coach.lastname %></td>
        <td><%= coach.nickname %></td>
        <td><%= coach.teams.count %></td>
        <td><%= coach.active %></td>
        <td><%= coach.email %></td>
        <td><%= coach.twitter %></td>
        <td><%= link_to 'Show', coach, :'data-role' => 'button' %></td>
        <td><%= link_to 'Edit', edit_coach_path(coach), :'data-role' => 'button' %></td>
        <td><%= link_to 'Destroy', coach, :'data-role' => 'button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coach', new_coach_path, :'data-role' => 'button' %>
