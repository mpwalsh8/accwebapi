<p id="notice"><%= notice %></p>

<h3 class="ui-bar ui-bar-b ui-corner-all"><%= @sport.name %></h3>

<figure id="pictogram">
  <%= image_tag(@sport.imageurl, alt: @sport.name) %>
</figure>

<h1><%= @sport.id %></h1>
<ul data-role="listview" data-inset="true">
  <li><%= link_to 'Teams', "#" %></a></li>
  <% teams = Team.find_by(:sport_id => @sport.id) %>
  <% @teams.each do |team| %>
    <li><%= link_to team.formalname, team %></li>
  <% end %>

  <li><%= link_to 'Coaches', "#" %></a></li>
  <li><%= link_to 'Schedules', "#" %></a></li>
</ul>

<div data-role="footer" data-position="fixed" data-tap-toggle="false" class="ui-bar">
  <%= link_to 'Back', sports_path, :'data-role' => "button", :'data-icon' => "back" %>
  <%= link_to 'Edit', edit_sport_path(@sport), :'data-role' => "button", :'data-icon' => "edit" %>
</div>
