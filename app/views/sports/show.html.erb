<p id="notice"><%= notice %></p>

<h3 class="ui-bar ui-bar-b ui-corner-all"><%= @sport.name %></h3>

<figure id="pictogram">
  <%= image_tag(@sport.imageurl, alt: @sport.name) %>
</figure>

<ul data-role="listview" data-inset="true">
  <% @teams = Team.where(:sport_id => @sport.id) %>
  <% @teams.each do |team| %>
    <li data-role="list-divider"><%= team.formalname %></li>
    <li><%= link_to 'Team Profile', team %></li>
    <li><%= link_to 'Team Roster', roster_team_path(team) %></a></li>
    <li><%= link_to 'Coaching Staff', staff_team_path(team) %></a></li>
    <li><%= link_to 'Schedule', "#" %></a></li>
  <% end %>

</ul>

<div data-role="footer" data-position="fixed" data-tap-toggle="false" class="ui-bar">
  <%= link_to 'Back to Sports', sports_path, :'data-role' => "button", :'data-icon' => "back" %>
  <%= link_to 'Edit Sport', edit_sport_path(@sport), :'data-role' => "button", :'data-icon' => "edit" %>
</div>
