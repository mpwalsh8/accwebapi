<p id="notice"><%= notice %></p>

<h3 class="ui-bar ui-bar-b ui-corner-all"><%= @athletes_team.team.formalname %>:  <%= @athletes_team.athlete.fullname %></h3>
    
<figure id="pictogram">
  <%= image_tag(@athletes_team.team.sport.imageurl, alt: @athletes_team.team.formalname) %>
</figure>
          
<ul data-role="listview" data-inset="true">
  <%if @athletes_team.captain %>
    <li>Team Captain</li>
  <% end %>
  <li>Jersey Number:  TBD</li>
  <li>Position:  TBD</li>
  <li><%= link_to @athletes_team.team.formalname, team_path(@athletes_team.team_id) %></li>
  <li><%= link_to @athletes_team.athlete.fullname, athlete_path(@athletes_team.athlete_id) %></li>
</ul>

<div data-role="footer" data-position="fixed" data-tap-toggle="false" class="ui-bar">
  <%= link_to 'Back to Team Athletes', athletes_teams_path, :'data-role' => "button", :'data-icon' => "back" %>
  <%= link_to 'Edit Team Athlete', edit_athletes_team_path(@athletes_team), :'data-role' => "button", :'data-icon' => "edit" %>
</div>
