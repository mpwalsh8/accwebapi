<%= form_for(@athlete) do |f| %>
  <% if @athlete.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@athlete.errors.count, "error") %> prohibited this athlete from being saved:</h2>

      <ul>
      <% @athlete.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :firstname, "First Name" %><br>
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :middlename, "Last Name" %><br>
    <%= f.text_field :middlename %>
  </div>
  <div class="field">
    <%= f.label :lastname, "Last Name" %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %>
  </div>
  <div class="field">
    <%= f.label :dob, "Date of Birth" %><br>
    <%= f.text_field :dob, :type => 'text', :'data-role' => 'date', :'data-inline' => 'true' %>
  </div>
  <div class="field">
    <%= f.label :gradyear, "Graduation Year" %><br>
    <%= f.select :gradyear, (Time.zone.now.year - 2)..(Time.zone.now.year + 4)%>
  </div>
  <div class="field">
    <%= f.label :active, "Active Student" %><br>
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.label :height %><br>
    <%= f.text_field :height %>
  </div>
  <div class="field">
    <%= f.label :weight %><br>
    <%= f.text_field :weight %>
  </div>
  <div class="field">
    <%= f.label :email, "Email Address" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :twitter, "Twitter Username" %><br>
    <%= f.text_field :twitter %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
