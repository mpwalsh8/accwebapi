<h1>Athletes</h1>

<table data-role="table" class="ui-responsive">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Middle Name</th>
      <th>Last Name</th>
      <th>Nickname</th>
      <th>DOB</th>
      <th>Graduation Year</th>
      <th>Active</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Email</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @athletes.each do |athlete| %>
      <tr>
        <td><%= athlete.firstname %></td>
        <td><%= athlete.middlename %></td>
        <td><%= athlete.lastname %></td>
        <td><%= athlete.nickname %></td>
        <td><%= athlete.dob %></td>
        <td><%= athlete.gradyear %></td>
        <td><%= athlete.active %></td>
        <td><%= athlete.height %></td>
        <td><%= athlete.weight %></td>
        <td><%= athlete.email %></td>
        <td><%= athlete.twitter %></td>
        <td><%= link_to 'Show', athlete, :'data-role' => 'button' %></td>
        <td><%= link_to 'Edit', edit_athlete_path(athlete), :'data-role' => 'button' %></td>
        <td><%= link_to 'Destroy', athlete, :'data-role' => 'button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Athlete', new_athlete_path, :'data-role' => 'button' %>
