<h1>Athletes</h1>
  
<ul data-role="listview" data-inset="true" data-filter="true" data-autodividers="true">
  <% @athletes.each do |athlete| %>
    <li><%= link_to athlete.lastcommafirst, athlete %></li>
  <% end %>
  <%#= content_tag(:li, fa_icon("check", text: "Bulleted list item")) %>
</ul>
      
<h2>Athlete Administration</h2>
    
<div data-role="collapsible-set" data-autodividers="true">
    <% @athletes.each do |athlete| %>
<div data-role="collapsible" data-collapsed="true" data-iconpos="right">
  <h2><%= h athlete.lastcommafirst %></h2>
         <%= link_to 'Edit', edit_athlete_path(athlete), :'data-role' => 'button', :'data-icon' => 'edit', :'data-inline' => "true" %>
         <%= link_to 'Delete', athlete, :'data-role' => 'button', :'data-icon' => 'delete', :'data-inline' => "true", method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
    <% end %>
</div>


<div data-role="footer" data-position="fixed" class="ui-bar">
  <%= link_to 'New Athlete', new_athlete_path, :'data-role' => 'button', :'data-icon' => "plus" %>
</div>

