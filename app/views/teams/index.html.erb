<h1>Listing Teams</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Season</th>
      <th>Coaches</th>
      <th>Web Site</th>
      <th>Twitter Handle</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.formalname %></td>
        <td><%= team.season.camelize %></td>
        <td><%= team.coaches.count %></td>
        <td><%= team.url %></td>
        <td><%= team.twitter %></td>
        <td><%= team.active%></td>
        <td><%= link_to 'Show', team, :'data-role' => 'button' %></td>
        <td><%= link_to 'Edit', edit_team_path(team), :'data-role' => 'button' %></td>
        <td><%= link_to 'Destroy', team, :'data-role' => 'button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path, :'data-role' => 'button' %>
