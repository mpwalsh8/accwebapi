<h1>Listing teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sport</th>
      <th>Varsity</th>
      <th>Gender</th>
      <th>URL</th>
      <th>Twitter</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.sport_id %></td>
        <td><%= team.varsity %></td>
        <td><%= team.gender %></td>
        <td><%= team.url %></td>
        <td><%= team.twitter %></td>
        <td><%= team.active %></td>
        <td><%= link_to 'Show', team, :'data-role' => 'button' %></td>
        <td><%= link_to 'Edit', edit_team_path(team), :'data-role' => 'button' %></td>
        <td><%= link_to 'Destroy', team, :'data-role' => 'button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path, :'data-role' => 'button' %>
