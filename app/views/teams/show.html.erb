<p id="notice"><%= notice %></p>

<div data-role="header">
<h1><%=h @team.formalname %></h1>
</div>

<ul data-role="listview" data-inset="true">
  <% if !@team.url.blank? %>
    <li><a  href="<%= sprintf("%s", @team.url) %>">Team Web Site</a><span class="ui-li-aside" data-rel="external""><%= @team.url %></span></li>
  <% end %>
  <% if !@team.twitter.blank? %>
    <li><a  href="<%= sprintf("https://twitter.com/%s", @team.twitter.delete("@")) %>" data-rel="external">Team Twitter Handle</a><span class="ui-li-aside"><%= @team.twitter %></span></li>
  <% end %>
  <li><%= link_to 'Team Roster', roster_team_path(@team) %></a></li>
  <li><%= link_to 'Coaching Staff', staff_team_path(@team) %></a></li>
  <li><a href="#">Schedule</a></li>
</ul>

<h3 class="ui-bar ui-bar-b ui-corner-all">Team Administration</h3>

<div data-role="footer" data-position="fixed" data-tap-toggle="false" class="ui-bar">
  <%= link_to 'Back', teams_path, :'data-role' => 'button', :'data-icon' => "back" %>
  <%= link_to 'Edit', edit_team_path(@team), :'data-role' => 'button', :'data-icon' => "edit" %>
</div>

